<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsWeather">

    <Button
        android:id="@+id/deleteweathers"
        android:backgroundTint="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:text="Deletar Climas Salvos"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:background="@drawable/button_custom"
        android:onClick="deleteWeathers"/>

    <Button
        android:layout_below="@+id/deleteweathers"
        android:id="@+id/deleteapi"
        android:backgroundTint="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:text="Deletar Dados Enviados"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:background="@drawable/button_custom"
        android:onClick="deleteApi"/>

</RelativeLayout>